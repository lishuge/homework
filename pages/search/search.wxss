/* pages/search/search.wxss */
.from{
   padding: 21rpx;
}
.search{
    position: relative;
    display: flex;
    justify-content: space-between;
}
.search input{
    padding-left: 20rpx;
    border-radius: 10rpx;
    height: 80rpx;
    width: 750rpx;
    border: 1px solid rgb(179, 173, 173);    
}
.search button{
    z-index: 100;
    position: absolute;
    right: 0rpx;
    top: 0rpx;
    width: 80rpx;
    height:80rpx;
    background: url(https://i.loli.net/2020/04/14/RhkxHv2npuEwWlm.png) center center no-repeat;
    background-size: 50rpx 50rpx;
}
 .search button::after{
    border: none;
}  
.hor{
    display: flex;
    flex-wrap: wrap;    
}
.hor text{
    background: #eee;
    padding: 10rpx 20rpx;
    margin: 10rpx 20rpx;
}
.left{
    margin-top: 25rpx;
    margin-bottom: 10rpx;
    margin-left: 20rpx;
}
.hotlist{
    padding: 5rpx 20rpx;  
    display: flex; 
}
.hotlist span{
    margin-right: 10rpx;
}
.hotlist .num{
    width: 40rpx;
    text-align: center;
}
.hotlist .numl{
    width: 40rpx;
    text-align: center;
    color:#C32625;
    font-weight:bold 
}
.hotlist .hotname{
    color:#C32625;
    font-weight: bold;
}